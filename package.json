{
  "name": "@johappel/nostr-framework",
  "version": "1.1.6",
  "description": "Modular Nostr Client Framework",
  "type": "module",
  "main": "framework/dist/index.js",
  "module": "framework/dist/index.js",
  "types": "framework/dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./framework/dist/index.js",
      "require": "./framework/dist/index.js",
      "types": "./framework/dist/types/index.d.ts"
    },
    "./config": {
      "import": "./framework/dist/config.js",
      "types": "./framework/dist/types/config.d.ts"
    },
    "./plugins/*": {
      "import": "./framework/plugins/*/index.js"
    },
    "./plugins/auth/*": {
      "import": "./framework/plugins/auth/*.js"
    },
    "./templates/*": {
      "import": "./framework/templates/*.js"
    }
  },
  "files": [
    "framework/",
    "docs/",
    "README.md",
    "LICENSE",
    "config.example.html"
  ],
  "scripts": {
    "dev": "npm run serve",
    "serve": "echo 'Please use VS Code Live Server or similar to serve files'",
    "test": "echo 'Open test-*.html files in browser to run tests'",
    "build": "cd framework && npm run build",
    "build:types": "cd framework && tsc",
    "prepublishOnly": "npm run build:types",
    "publish-npm": "npm publish --access public"
  },
  "keywords": [
    "nostr",
    "nostr-client",
    "framework",
    "nip-07",
    "nip-46",
    "decentralized",
    "web3",
    "protocol",
    "social"
  ],
  "author": "johappel",
  "license": "MIT",
  "homepage": "https://github.com/johappel/nostr-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johappel/nostr-client.git"
  },
  "bugs": {
    "url": "https://github.com/johappel/nostr-client/issues"
  },
  "dependencies": {
    "react": "^19.2.0"
  },
  "peerDependencies": {
    "nostr-tools": "^2.17.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
