{
  "name": "@johappel/nostr-framework",
  "version": "1.1.7",
  "description": "Modular Nostr Client Framework with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/types/config.d.ts"
    },
    "./nextjs": {
      "import": "./dist/nextjs/index.js",
      "types": "./dist/types/nextjs/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/types/react/index.d.ts"
    },
    "./react/components": {
      "import": "./dist/react/components/NostrConfigPanel.js",
      "types": "./dist/types/react/components/NostrConfigPanel.d.ts"
    },
    "./react/hooks": {
      "import": "./dist/react/hooks/useNostrConfig.js",
      "types": "./dist/types/react/hooks/useNostrConfig.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "nostr",
    "nostr-client",
    "framework",
    "nip-07",
    "nip-46",
    "decentralized",
    "web3",
    "protocol",
    "social",
    "typescript"
  ],
  "author": "johappel",
  "license": "MIT",
  "homepage": "https://github.com/johappel/nostr-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johappel/nostr-client.git"
  },
  "bugs": {
    "url": "https://github.com/johappel/nostr-client/issues"
  },
  "peerDependencies": {
    "nostr-tools": "^2.17.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
